<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="4dp"
    android:padding="15dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardPreventCornerOverlap="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:src="@drawable/track"
            android:scaleType="fitXY"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="9.0"
            android:textSize="22sp"
            android:padding="20dp"
            android:id="@+id/tvScore"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_blue_dark"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout2"
            android:layout_marginLeft="31dp"
            android:layout_marginStart="31dp"
            android:layout_above="@+id/relativeLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/user3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/walter" />

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/user1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/teacher"
                android:layout_alignTop="@+id/user2"
                android:layout_toRightOf="@+id/user2"
                android:layout_toEndOf="@+id/user2"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="32dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/user2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/yeats"
                android:layout_toRightOf="@+id/user3"
                android:layout_toEndOf="@+id/user3"
                android:layout_marginLeft="20dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/tvScore"
            android:layout_alignEnd="@+id/tvScore"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="30dp"
            android:layout_below="@+id/imageView"
            android:id="@+id/relativeLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Totral Distance"
                android:id="@+id/tvTrackDistance"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="6 K.M"
                android:id="@+id/tvDistance"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/tvTrackDistance"
                android:layout_toEndOf="@+id/tvTrackDistance"
                android:layout_marginLeft="54dp"
                android:layout_marginStart="54dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Avg Time"
                android:id="@+id/tvAvgTimeLabel"
                android:layout_below="@+id/tvTrackDistance"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="32dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="30 min"
                android:id="@+id/tvAvgTime"
                android:layout_alignTop="@+id/tvAvgTimeLabel"
                android:layout_alignLeft="@+id/tvDistance"
                android:layout_alignStart="@+id/tvDistance" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="AvgSpeed"
                android:id="@+id/tvAvgSpeedLabel"
                android:layout_below="@+id/tvAvgTimeLabel"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="35dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="30 Km/Hr"
                android:id="@+id/tvAvgSpeed"
                android:layout_alignBottom="@+id/tvAvgSpeedLabel"
                android:layout_alignLeft="@+id/tvAvgTime"
                android:layout_alignStart="@+id/tvAvgTime" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Best Sprint Time"
                android:id="@+id/tvBestSprintTimeLabel"
                android:layout_marginTop="37dp"
                android:layout_below="@+id/tvAvgSpeedLabel"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="15 min"
                android:id="@+id/tvAvgBestTime"
                android:layout_alignBottom="@+id/tvBestSprintTimeLabel"
                android:layout_alignLeft="@+id/tvAvgSpeed"
                android:layout_alignStart="@+id/tvAvgSpeed" />

        </RelativeLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>