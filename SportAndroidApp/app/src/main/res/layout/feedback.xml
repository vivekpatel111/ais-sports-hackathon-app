<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hack.sport.healthapp.FeedbackActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#f5f5f5"
        android:padding="30dp"
        android:id="@+id/relativeLayout4">

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/ratingBar"
            android:paddingTop="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:fontFamily="Roboto Thin"
            android:text="Intensity"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="24dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5"
        android:padding="30dp"
        android:layout_below="@+id/relativeLayout4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:id="@+id/q">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:text="Injury (if any)"
            android:fontFamily="Roboto Thin"
            android:textSize="24dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:id="@+id/autoCompleteTextView"
            android:layout_alignParentTop="true"
            android:hint="WHERE"
            android:gravity="center|center_horizontal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="32dp"
            android:entries="@array/where"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="125dp"
            android:id="@+id/autoCompleteTextView2"
            android:hint="SEVERITY"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/autoCompleteTextView"
            android:layout_alignEnd="@+id/autoCompleteTextView"
            android:textSize="32dp"
            android:entries="@array/severity"/>
    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:text="Record Activity"
        android:id="@+id/letsStartGoal"
        android:layout_alignLeft="@+id/q"
        android:layout_alignStart="@+id/q"
        android:layout_alignRight="@+id/q"
        android:layout_alignEnd="@+id/q"
        android:background="#576BAE"
        android:textSize="24dp"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
