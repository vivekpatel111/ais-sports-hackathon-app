<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/welcome1"
    tools:context="hack.sport.healthapp.WelcomeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hi !"
        android:id="@+id/textView3"
        android:layout_marginTop="118dp"
        android:textSize="72dp"
        android:textColor="@color/switch_thumb_material_light"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-light" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/facebook"
        android:background="@drawable/facebook"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/twitter"
        android:background="@drawable/twitter"
        android:layout_alignTop="@+id/facebook"
        android:layout_toRightOf="@+id/facebook"
        android:layout_toEndOf="@+id/facebook" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/linkedin"
        android:background="@drawable/linkedin"
        android:layout_alignTop="@+id/twitter"
        android:layout_toRightOf="@+id/twitter"
        android:layout_toEndOf="@+id/twitter" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/googleplus"
        android:background="@drawable/googleplus"
        android:layout_alignTop="@+id/linkedin"
        android:layout_toRightOf="@+id/linkedin"
        android:layout_toEndOf="@+id/linkedin" />
</RelativeLayout>
